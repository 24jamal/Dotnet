@model INTERNMvc.Models.User

@{
    ViewBag.Title = "Login";
    var errorMessage = TempData["errorMessage"] as string;
}

<style>
    .bkgcont {
        background-image: url('/Images/handshake.png');
        background-size: 100% 100%;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0px;
    }

    .login-container {
        width: 300px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f9;
        opacity: 0.9;
    }

        .login-container h2 {
            text-align: center;
            margin-bottom: 20px;
        }

    .form-group {
        margin-bottom: 15px;
    }

    .btn-primary {
        width: 100%;
    }

    .error-message {
        color: red;
        font-size: 0.875em;
    }

    .alert {
        background-color: #f8d7da;
        color: #721c24;
        padding: 15px;
        border: 1px solid #f5c6cb;
        border-radius: 5px;
        margin-bottom: 15px;
    }
</style>

<div class="bkgcont">
    <div class="login-container">
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert">
                @errorMessage
            </div>
        }

        @using (Html.BeginForm("Login", "User", FormMethod.Post))
        {
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="ID_LoginUser" name="username" class="form-control" />
                <span id="usernameError" class="error-message"></span> <!-- Error message for username -->
            </div>

            <div class="form-group">
                <label for="password">Password &emsp;&emsp;&emsp;<a href="~/ForgotPassword/Index">Forgot Password?</a></label>
                <input type="password" id="ID_LoginPass" name="password" class="form-control" />
                <span id="passwordError" class="error-message"></span> <!-- Error message for password -->
            </div>

            <div class="form-group">
                <img id="captchaImage" src="" alt="CAPTCHA Image" style="height: 40px; cursor: pointer;" title="Click to refresh" />
                <input type="text" id="captchaInput" name="captcha" class="form-control" placeholder="Enter CAPTCHA" />
                <span id="captchaError" class="error-message"></span> <!-- Error message for CAPTCHA -->
            </div>

            <div class="form-group">
                <input type="submit" id="ID_LoginSubmit" value="Login" class="btn btn-primary" />
            </div>
        }

        <div>
            <p>New to <img src="~/images/mylapaylogo3.png" alt="Logo" style="height:25px;" />? <a href="~/User/Register">Register here.</a></p>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        // Load CAPTCHA image on page load
        loadCaptcha();

        // Refresh CAPTCHA image when clicked
        $("#captchaImage").click(function () {
            loadCaptcha();
        });

        function loadCaptcha() {
            $("#captchaImage").attr("src", "@Url.Action("GenerateCaptcha", "User")?" + new Date().getTime());
        }

        // Validate form and handle submit
        $("#ID_LoginSubmit").click(function (event) {
            var username = $("#ID_LoginUser").val();
            var password = $("#ID_LoginPass").val();
            var captchaInput = $("#captchaInput").val();
            var isValid = true;

            // Clear previous error messages
            $(".error-message").text("");

            // Username validation
            if (username === "") {
                $("#usernameError").text("Username is required");
                isValid = false;
            }

            // Password validation
            if (password === "") {
                $("#passwordError").text("Password is required");
                isValid = false;
            } else {
                var passwordRegex = /^(?=.*[A-Z])(?=.*[\W_]).{6,}$/;
                if (!passwordRegex.test(password)) {
                    $("#passwordError").text('Password must contain at least one uppercase letter, one special character, and be at least 6 characters long.');
                    isValid = false;
                }
            }

            // CAPTCHA validation
            if (captchaInput === "") {
                $("#captchaError").text("CAPTCHA is required");
                isValid = false;
            }

            if (!isValid) {
                event.preventDefault();
            }
        });
    });
</script>